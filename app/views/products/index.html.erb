<div class="row">
	<div class="large-12 columns">
		<div class="links"><%= link_to 'Edit Stores', stores_path %></div>
		<div class="links"><%= link_to 'Modify Grocery List', new_user_grocery_item_path(user_id: current_user.id) %></div>
		<div class="links"><%= link_to 'Add Products', new_product_path %> </div>
		<div class="links"><%= link_to 'Show all current flyer products', products_path %> </div>

    <p>__________________________________________________________________________________________________________</p>

    <h3>Sort by Store</h3>
      <div>
    	  <% Store.all.each do |s| %>
        <%= link_to s.name, store_products_path(s)  %>
    	  <% end %>
      </div>

    <p>__________________________________________________________________________________________________________</p>

    <div class="row">
      <div class="large-3 columns">
        <div>
    	    <%= form_tag products_path, remote: true ,:method => 'get', id: 'search-form' do %>
      	   <p><%= text_field_tag :search, params[:search] %>
      	   	<%= submit_tag "Search all Flyers", :name => nil, :class => 'sty-button' %>
      	   </p>
    		  <% end %>
        </div>
      </div>

      <div class="large-9 columns">
        &nbsp;
      </div>

    <div class="row">
      <div class="large-12 columns">
        <div id="products">
          <%= render "products" %>
        </div>
      </div>
</div>




